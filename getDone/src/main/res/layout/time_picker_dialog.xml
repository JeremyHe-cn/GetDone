<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" 
    android:background="@drawable/ios7round">
    
    <TextView 
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/widget_margin"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:text="请选择时间"
        android:textSize="@dimen/font_title"
        android:textColor="@color/ios7_text_color"
        />
    
    <View style="@style/horizontal_line"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>
    
    <include layout="@layout/widget_select_time_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>
    
    <View style="@style/horizontal_line"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title"
            android:layout_weight="1"
            android:background="@drawable/btn_alert_dialog_cancel"
            android:text="取消"
            android:textColor="@color/gray_79"
            android:textSize="@dimen/font_title" />
        
        <View style="@style/vertical_line"/>

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_title"
            android:layout_weight="1"
            android:background="@drawable/btn_alert_dialog_ok"
            android:text="确定"
            android:textColor="#ffcc0000"
            android:textSize="@dimen/font_title" />
    </LinearLayout>

</LinearLayout>
