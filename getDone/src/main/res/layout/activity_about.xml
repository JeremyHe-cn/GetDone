<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical" >
    
    <include layout="@layout/part_nav_bar"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/height_title"
        android:background="@color/getdone_main"
        android:gravity="center"
        android:text="@string/about_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/widget_margin"
        android:paddingBottom="@dimen/height_title"
        android:background="@color/getdone_main"
        android:gravity="center"
        android:text="@string/about_sub_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_body"
        android:textStyle="bold"
        />
    
    <View style="@style/shadow_horizontal_down"/>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <View style="@style/horizontal_line"/>
            
            <LinearLayout style="@style/setting_item">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="GetDone 版本"
                    android:textColor="@color/text_main" />

                <TextView
                    android:id="@+id/about_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="v1.0.0"
                    android:textColor="@color/text_sub" />
            </LinearLayout>
            
            <View style="@style/horizontal_line"/>
        </LinearLayout>
        
    </ScrollView>
</LinearLayout>
