<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/task_priority_view"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:background="@color/priority_important" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/height_title"
        android:layout_marginLeft="20dp"
        android:layout_weight="1" 
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/task_finished_line"
                style="@style/horizontal_line"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/task_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/text_main"
                android:textSize="16sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/task_excutetime_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="2013-12-01 09:15"
            android:textColor="@color/text_sub"
            android:textSize="12sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/task_finished_cb"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:button="@drawable/checkbox_white" />

</LinearLayout>