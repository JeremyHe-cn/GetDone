<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/nav_bar"/>
    
    <ListView 
        android:id="@+id/friend_list_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="4dp"
        />
    
    <View style="@style/horizontal_line"/>
    
    <Button 
        android:id="@+id/friend_add_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/btn_selecter"
        android:drawableLeft="@drawable/icon_qr"
        android:drawableRight="@drawable/arrow_right_gray"
        android:drawablePadding="4dp"
        android:text="扫一扫添加好友"
        android:gravity="left|center_vertical"
        />
    

</LinearLayout>
